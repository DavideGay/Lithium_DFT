 &control
    calculation = 'scf'
    restart_mode='from_scratch',
    prefix='li',
    tstress = .true.
    tprnfor = .true.
    pseudo_dir = './pseudopot/',
    outdir = './QE-outdir/',
 /
 &system
    ibrav=  3,
    celldm(1) = 6.54,
    nat=  1, ntyp= 1,
    ecutwfc = 20,
    occupations='smearing', smearing='methfessel-paxton', degauss=0.01
    input_dft='pz'
 /
 &electrons
    mixing_mode = 'plain'
    mixing_beta = 0.7
    conv_thr =  1.0d-8
 /
ATOMIC_SPECIES
 Li  6.94 Li.pbe-mt_fhi.UPF
ATOMIC_POSITIONS
 Li 0.00 0.00 0.00
K_POINTS automatic
 10 10 10   1 1 1
